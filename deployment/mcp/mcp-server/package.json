{
  "name": "@fataplus/mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for Fataplus Agricultural Platform",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:worker": "tsc --target es2021 --module es2022 --moduleResolution node --allowSyntheticDefaultImports --esModuleInterop --outDir dist-worker src/worker.ts",
    "start": "node dist/index.js",
    "start:worker": "wrangler dev",
    "deploy:worker": "wrangler deploy",
    "dev": "tsx src/index.ts",
    "dev:worker": "wrangler dev --env development",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "mcp",
    "fataplus",
    "agritech",
    "ai",
    "model-context-protocol"
  ],
  "author": "Fataplus Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
