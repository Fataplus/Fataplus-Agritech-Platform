# ===========================================
# FATAPLUS PRODUCTION ENVIRONMENT
# ===========================================
# Production deployment configuration
# ===========================================

# Environment Settings
ENVIRONMENT=production
NODE_ENV=production
BUILD_TARGET=production
FRONTEND_COMMAND=npm run start

# Database Configuration
POSTGRES_DB=fataplus_prod
POSTGRES_USER=fataplus_prod
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# MinIO Configuration
MINIO_ROOT_USER=${MINIO_ROOT_USER}
MINIO_ROOT_PASSWORD=${MINIO_ROOT_PASSWORD}
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# Application Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000
AI_SERVICE_PORT=8001
MOTIA_PORT=8003
MCP_PORT=3001
AGRIBOT_PORT=3002

# Production URLs
NEXT_PUBLIC_API_URL=https://api.fata.plus
NEXT_PUBLIC_APP_URL=https://admin.fata.plus

# JWT Configuration (Use strong secrets in production)
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration (Restrictive for production)
CORS_ORIGINS=https://admin.fata.plus,https://fata.plus

# Logging
LOG_LEVEL=INFO

# External API Keys (Required for production)
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
WEATHER_API_KEY=${WEATHER_API_KEY}
STRIPE_PUBLIC_KEY=${STRIPE_PUBLIC_KEY}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}

# Production-specific settings
DEBUG=false
SSL_CERT_PATH=/etc/ssl/certs/fataplus.crt
SSL_KEY_PATH=/etc/ssl/private/fataplus.key
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
