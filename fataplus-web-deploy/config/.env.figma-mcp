# ==========================================
# FIGMA MCP SERVER CONFIGURATION
# ==========================================
# Configuration for connecting to Figma MCP Server

# ==========================================
# FIGMA MCP SERVER SETTINGS
# ==========================================
FIGMA_MCP_URL=http://127.0.0.1:3845/mcp
FIGMA_MCP_PORT=3845
FIGMA_MCP_HOST=127.0.0.1

# ==========================================
# FIGMA API CREDENTIALS
# ==========================================
# Your Figma API key (starts with 'figd_')
FIGMA_API_KEY=figd_feqBOA7QYsosHDsYj4ZXLVxvyJNwUKjtYtlQjG_2

# ==========================================
# FIGMA MCP CONNECTION MODE
# ==========================================
# Connection mode: 'stdio' for direct connection, 'http' for HTTP server
FIGMA_MCP_MODE=stdio

# ==========================================
# LOCAL DEVELOPMENT SETTINGS
# ==========================================
# Enable debug logging for development
FIGMA_MCP_DEBUG=true
FIGMA_MCP_LOG_LEVEL=debug

# ==========================================
# PROJECT CONFIGURATION
# ==========================================
# Default file key and node ID for testing (optional)
FIGMA_DEFAULT_FILE_KEY=
FIGMA_DEFAULT_NODE_ID=

# ==========================================
# OUTPUT CONFIGURATION
# ==========================================
# Local path for downloading Figma images
FIGMA_IMAGE_OUTPUT_PATH=/Users/fefe/FP-09/figma-assets

# Default export scale for PNG images
FIGMA_PNG_EXPORT_SCALE=2

# ==========================================
# SECURITY SETTINGS
# ==========================================
# Enable CORS for local development
FIGMA_ENABLE_CORS=true

# Request timeout in milliseconds
FIGMA_REQUEST_TIMEOUT=30000

# ==========================================
# FEATURE FLAGS
# ==========================================
# Enable image downloading
FIGMA_ENABLE_IMAGE_DOWNLOAD=true

# Enable automatic node traversal
FIGMA_ENABLE_NODE_TRAVERSAL=true

# Enable component analysis
FIGMA_ENABLE_COMPONENT_ANALYSIS=true