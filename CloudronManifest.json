{
    "id": "io.fataplus.fataplus-agritech-platform",
    "title": "Fataplus AgriTech Platform",
    "author": "Fataplus Team",
    "description": "Multi-context SaaS platform for African agriculture with weather intelligence, livestock management, e-commerce, LMS, and gamification",
    "tagline": "Build the future of African Agriculture",
    "version": "1.0.0",
    "healthCheckPath": "/health",
    "httpPort": 8000,
    "addons": {
        "postgresql": {
            "version": "15"
        },
        "redis": {
            "version": "7"
        },
        "minio": {
            "version": "latest"
        },
        "ldap": {}
    },
    "manifestVersion": 2,
    "website": "https://fataplus.com",
    "contactEmail": "contact@fataplus.com",
    "icon": "file://icon.png",
    "tags": [
        "agritech",
        "saas",
        "agriculture",
        "africa",
        "meteorology",
        "livestock",
        "ecommerce",
        "education",
        "gamification"
    ],
    "mediaLinks": [
        "https://github.com/Fataplus/Fataplus-Agritech-Platform"
    ],
    "changelog": {
        "1.0.0": "Initial release with core authentication, database setup, and multi-context architecture"
    },
    "optionalMemoryLimit": 1024,
    "optionalCpuLimit": 1000,
    "maxMemoryLimit": 2048,
    "maxCpuLimit": 2000,
    "minBoxVersion": "7.1.0",
    "tcpPorts": {
        "WEB_PORT": {
            "title": "Web Frontend Port",
            "description": "Port for Next.js frontend",
            "defaultValue": 3000,
            "containerPort": 3000
        },
        "API_PORT": {
            "title": "API Backend Port",
            "description": "Port for FastAPI backend",
            "defaultValue": 8000,
            "containerPort": 8000
        },
        "AI_PORT": {
            "title": "AI Services Port",
            "description": "Port for AI/ML services",
            "defaultValue": 8001,
            "containerPort": 8001
        }
    },
    "env": {
        "NODE_ENV": {
            "type": "string",
            "description": "Node.js environment",
            "defaultValue": "production"
        },
        "ENVIRONMENT": {
            "type": "string",
            "description": "Application environment",
            "defaultValue": "production"
        },
        "JWT_SECRET_KEY": {
            "type": "password",
            "description": "JWT secret key for authentication"
        },
        "LDAP_ENABLED": {
            "type": "boolean",
            "description": "Enable LDAP authentication",
            "defaultValue": true
        },
        "LDAP_SERVER": {
            "type": "string",
            "description": "LDAP server hostname",
            "defaultValue": "localhost"
        },
        "LDAP_PORT": {
            "type": "number",
            "description": "LDAP server port",
            "defaultValue": 389
        },
        "LDAP_USE_SSL": {
            "type": "boolean",
            "description": "Use SSL for LDAP connection",
            "defaultValue": false
        },
        "LDAP_BASE_DN": {
            "type": "string",
            "description": "LDAP base DN",
            "defaultValue": "dc=cloudron,dc=local"
        },
        "LDAP_BIND_DN": {
            "type": "string",
            "description": "LDAP bind DN for service account"
        },
        "LDAP_BIND_PASSWORD": {
            "type": "password",
            "description": "LDAP bind password for service account"
        },
        "LDAP_USER_SEARCH_FILTER": {
            "type": "string",
            "description": "LDAP user search filter",
            "defaultValue": "(uid={username})"
        },
        "LDAP_USER_DISPLAY_NAME_ATTRIBUTE": {
            "type": "string",
            "description": "LDAP attribute for user display name",
            "defaultValue": "cn"
        },
        "LDAP_USER_EMAIL_ATTRIBUTE": {
            "type": "string",
            "description": "LDAP attribute for user email",
            "defaultValue": "mail"
        },
        "OPENWEATHER_API_KEY": {
            "type": "password",
            "description": "OpenWeatherMap API key for weather data"
        },
        "STRIPE_PUBLIC_KEY": {
            "type": "string",
            "description": "Stripe public key for payments"
        },
        "STRIPE_SECRET_KEY": {
            "type": "password",
            "description": "Stripe secret key for payments"
        },
        "SENDGRID_API_KEY": {
            "type": "password",
            "description": "SendGrid API key for email services"
        },
        "AIRTEL_API_KEY": {
            "type": "password",
            "description": "Airtel Money API key for mobile payments"
        },
        "AIRTEL_API_SECRET": {
            "type": "password",
            "description": "Airtel Money API secret for mobile payments"
        }
    },
    "postInstallMessage": "üéâ Fataplus AgriTech Platform has been successfully installed!\n\nüìã Next Steps:\n1. Configure LDAP settings in the app configuration\n2. Set up API keys for external services (OpenWeatherMap, Stripe, etc.)\n3. Create your first admin user\n4. Access the application at your Cloudron domain\n\nüìñ Documentation: https://docs.fataplus.com\nüêõ Support: contact@fataplus.com",
    "logo": "file://logo.svg"
}
