# Environment Configuration Template for Fataplus Agritech Platform
# Copy this file to .env and fill in your actual values
# SECURITY: Never commit .env files to version control

# =============================================================================
# CORE APPLICATION CONFIGURATION
# =============================================================================

# Application Environment
NODE_ENV=development
API_ENVIRONMENT=development

# Application URLs (Update with your actual domain)
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_APP_URL=https://yourdomain.com
CLOUDRON_APP_DOMAIN=app.yourdomain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Configuration
DATABASE_URL=postgresql://username:password@host:5432/database_name
POSTGRES_DB=your_database_name
POSTGRES_USER=your_database_user
POSTGRES_PASSWORD=generate_secure_password_here

# Redis Configuration
REDIS_URL=redis://host:6379/0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration (Generate with: openssl rand -hex 32)
JWT_SECRET_KEY=generate_jwt_secret_with_openssl_rand_hex_32
SECRET_KEY=generate_secret_key_with_openssl_rand_hex_32
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (comma-separated list of allowed origins)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# AUTHENTICATION & LDAP CONFIGURATION
# =============================================================================

# LDAP Settings (Optional - for enterprise integration)
LDAP_ENABLED=false
LDAP_SERVER=ldap://your-ldap-server.com:389
LDAP_BASE_DN=dc=yourdomain,dc=com
LDAP_BIND_DN=cn=admin,dc=yourdomain,dc=com
LDAP_BIND_PASSWORD=your_ldap_admin_password

# =============================================================================
# EXTERNAL API KEYS & INTEGRATIONS
# =============================================================================

# Weather API (OpenWeatherMap)
OPENWEATHER_API_KEY=your_openweathermap_api_key

# Payment Processing (Stripe)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key

# Mobile Money Integration
# M-Pesa (Kenya)
MPESA_API_URL=https://sandbox.safaricom.co.ke
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret

# Airtel Money
AIRTEL_MONEY_API_URL=https://openapi.airtel.africa
AIRTEL_MONEY_CLIENT_ID=your_airtel_client_id
AIRTEL_MONEY_CLIENT_SECRET=your_airtel_client_secret

# =============================================================================
# OBJECT STORAGE CONFIGURATION
# =============================================================================

# MinIO Configuration
MINIO_ROOT_USER=your_minio_access_key
MINIO_ROOT_PASSWORD=your_minio_secret_key
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET=fataplus-assets

# AWS S3 (Alternative to MinIO)
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# =============================================================================
# MOTIA AI SERVICE CONFIGURATION
# =============================================================================

# Motia Service URL
MOTIA_SERVICE_URL=http://localhost:8001
MOTIA_PORT=8001

# AI/ML API Keys
OPENAI_API_KEY=your_openai_api_key_here
CLAUDE_API_KEY=your_anthropic_claude_api_key
GOOGLE_AI_API_KEY=your_google_ai_api_key

# AI Model Configuration
AI_MODEL_WEATHER=gpt-4
AI_MODEL_LIVESTOCK=claude-3-sonnet
AI_MODEL_CROPS=custom-vision-model
AI_MODEL_MARKET=custom-analysis-model

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_METRICS=true

# Error Tracking (Sentry)
SENTRY_DSN=your_sentry_dsn_url

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# CLOUDRON-SPECIFIC CONFIGURATION
# =============================================================================

# Cloudron automatically provides these variables - do not set manually
# CLOUDRON_POSTGRESQL_PASSWORD=auto_provided_by_cloudron
# CLOUDRON_REDIS_PASSWORD=auto_provided_by_cloudron
# CLOUDRON_LDAP_BIND_PASSWORD=auto_provided_by_cloudron

# =============================================================================
# DEVELOPMENT-SPECIFIC CONFIGURATION
# =============================================================================

# Service Hosts and Ports
API_HOST=0.0.0.0
API_PORT=8000
AI_SERVICE_HOST=0.0.0.0
AI_SERVICE_PORT=8001

# AI Model Configuration
AI_MODEL_PATH=/app/models

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/ssl/certs/app.crt
SSL_KEY_PATH=/etc/ssl/private/app.key

# =============================================================================
# SECURITY NOTES
# =============================================================================

# 1. Generate secure passwords using: openssl rand -base64 32
# 2. Generate JWT secrets using: openssl rand -hex 32
# 3. Use environment-specific values (dev/staging/prod)
# 4. Never commit actual credentials to version control
# 5. Use Cloudron's built-in secret management for production
# 6. Rotate credentials regularly
# 7. Use least privilege principle for database users
# 8. Enable 2FA for all external service accounts