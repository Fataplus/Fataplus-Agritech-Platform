# Local Development Environment Configuration
# Copy this file to .env.local for development
# SECURITY: Never commit .env.local to version control

# =============================================================================
# LOCAL DEVELOPMENT CONFIGURATION
# =============================================================================

# Application Environment
NODE_ENV=development
API_ENVIRONMENT=development

# Local Development URLs
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# LOCAL DATABASE CONFIGURATION
# =============================================================================

# Local PostgreSQL (using docker-compose)
DATABASE_URL=postgresql://fataplus_dev:dev_password_change_me@localhost:5432/fataplus_dev
POSTGRES_DB=fataplus_dev
POSTGRES_USER=fataplus_dev
POSTGRES_PASSWORD=dev_password_change_me

# Local Redis
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# LOCAL SECURITY CONFIGURATION
# =============================================================================

# Development JWT Secret (Generate new one: openssl rand -hex 32)
JWT_SECRET_KEY=development_jwt_secret_replace_with_random_hex_32
SECRET_KEY=development_secret_replace_with_random_hex_32
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS (allow all for development)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# LOCAL OBJECT STORAGE
# =============================================================================

# Local MinIO
MINIO_ROOT_USER=minioadmin_change_me
MINIO_ROOT_PASSWORD=minioadmin_password_change_me
MINIO_ENDPOINT=localhost:9000
MINIO_BUCKET=fataplus-dev-assets

# =============================================================================
# DEVELOPMENT API KEYS (Use test/sandbox keys only)
# =============================================================================

# Weather API (free tier)
OPENWEATHER_API_KEY=your_development_api_key

# Stripe Test Keys (never use live keys in development)
STRIPE_PUBLIC_KEY=pk_test_development_key
STRIPE_SECRET_KEY=sk_test_development_key

# Email (use test/sandbox)
SENDGRID_API_KEY=test_sendgrid_key

# Mobile Money Test Credentials
MPESA_API_URL=https://sandbox.safaricom.co.ke
MPESA_CONSUMER_KEY=test_consumer_key
MPESA_CONSUMER_SECRET=test_consumer_secret

AIRTEL_MONEY_API_URL=https://openapi.airtel.africa
AIRTEL_MONEY_CLIENT_ID=test_client_id
AIRTEL_MONEY_CLIENT_SECRET=test_client_secret

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Logging
LOG_LEVEL=DEBUG
ENABLE_METRICS=false

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60

# Service Configuration
API_HOST=0.0.0.0
API_PORT=8000
AI_SERVICE_HOST=0.0.0.0
AI_SERVICE_PORT=8001

# AI Models
AI_MODEL_PATH=./models

# =============================================================================
# DEVELOPMENT NOTES
# =============================================================================

# 1. This file contains development-only credentials
# 2. Use test/sandbox API keys only
# 3. Generate new secrets regularly even for development
# 4. Don't use production data in development
# 5. Use weak passwords only for local development databases
# 6. Always use HTTPS in production, HTTP is OK for local development