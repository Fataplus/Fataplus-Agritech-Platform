# =============================================================================
# AUTHENTICATION & SECURITY (Production)
# =============================================================================
JWT_SECRET_KEY=fataplus-admin-production-secret-2025-very-secure-key
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
