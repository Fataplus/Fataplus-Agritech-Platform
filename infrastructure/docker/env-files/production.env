# Fataplus Production Environment Configuration
# =================================================

# Database Configuration
POSTGRES_DB=fataplus_prod
POSTGRES_USER=fataplus_user
POSTGRES_HOST=postgres-service
POSTGRES_PORT=5432
DATABASE_URL=postgresql://fataplus_user:${POSTGRES_PASSWORD}@postgres-service:5432/fataplus_prod

# Redis Configuration
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_URL=redis://redis-service:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_ENVIRONMENT=production
LOG_LEVEL=WARN
SECRET_KEY=your_production_secret_key_here

# JWT Configuration
JWT_SECRET_KEY=your_production_jwt_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=https://fata.plus,https://staging.fata.plus,https://mcp.fata.plus

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.fata.plus
NEXT_PUBLIC_APP_URL=https://fata.plus

# AI Service Configuration
AI_SERVICE_HOST=0.0.0.0
AI_SERVICE_PORT=8001
AI_MODEL_PATH=/app/models

# MCP Configuration
MCP_PORT=8002
BACKEND_URL=http://web-backend-service:8000
AI_SERVICE_URL=http://ai-services:8001
FRONTEND_URL=http://web-frontend-service:3000

# Regional Settings (Africa)
TIMEZONE=Africa/Nairobi
DEFAULT_CURRENCY=USD
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,fr,sw,ar,pt

# External API Keys (Production)
OPENAI_API_KEY=your_production_openai_api_key_here
WEATHER_API_KEY=your_production_weather_api_key_here
STRIPE_API_KEY=your_production_stripe_api_key_here

# LDAP Configuration (Production)
LDAP_SERVER=ldap://ldap.example.com
LDAP_BASE_DN=dc=fata,dc=plus
LDAP_BIND_DN=cn=admin,dc=fata,dc=plus
LDAP_BIND_PASSWORD=your_production_ldap_password_here

# SSL Certificates (Production)
SSL_CERT_PATH=/etc/ssl/certs/fataplus.crt
SSL_KEY_PATH=/etc/ssl/private/fataplus.key

# Monitoring and Analytics
SENTRY_DSN=your_production_sentry_dsn_here
POSTHOG_API_KEY=your_production_posthog_api_key_here
PROMETHEUS_ENDPOINT=http://prometheus:9090
GRAFANA_ENDPOINT=http://grafana:3000

# Production Features
DEBUG_MODE=false
RELOAD_ENABLED=false
SHOW_ERRORS=false

# Email Configuration (Production)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@fata.plus
SMTP_PASSWORD=your_production_smtp_password_here
EMAIL_FROM=noreply@fata.plus

# File Storage Configuration
MINIO_HOST=minio.fata.plus
MINIO_PORT=9000
MINIO_ACCESS_KEY=your_production_minio_access_key_here
MINIO_SECRET_KEY=your_production_minio_secret_key_here
MINIO_BUCKET_NAME=fataplus-production

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 1 * * *  # Daily at 1 AM
BACKUP_RETENTION_DAYS=90
BACKUP_ENCRYPTION_KEY=your_production_backup_encryption_key_here
BACKUP_REMOTE_STORAGE=s3://fataplus-backups/

# Disaster Recovery
DISASTER_RECOVERY_ENABLED=true
RECOVERY_POINT_OBJECTIVE=24h  # RPO: 24 hours
RECOVERY_TIME_OBJECTIVE=4h    # RTO: 4 hours

# Security Configuration
SECURITY_HEADERS_ENABLED=true
RATE_LIMITING_ENABLED=true
CORS_STRICT_MODE=true
HTTPS_ONLY=true
HSTS_ENABLED=true

# Performance Configuration
CACHE_TTL=3600
CDN_ENABLED=true
COMPRESSION_ENABLED=true
OPTIMIZED_IMAGES=true

# Regional Deployment (Africa)
DEPLOYMENT_REGIONS=kenya,south_africa,nigeria,ghana
CDN_REGIONS=af-south-1,eu-west-1,us-east-1
DATABASE_REPLICATION_ENABLED=true
READ_REPLICAS=3

# Monitoring and Alerting
ALERTING_ENABLED=true
ALERT_EMAIL=ops@fata.plus
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/your/webhook/url
HEALTH_CHECK_ENABLED=true
METRICS_COLLECTION_ENABLED=true

# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10
API_THROTTLING_ENABLED=true

# Data Retention
LOG_RETENTION_DAYS=90
AUDIT_LOG_RETENTION_DAYS=365
USER_DATA_RETENTION_DAYS=1095  # 3 years

# Compliance
GDPR_COMPLIANCE_ENABLED=true
DATA_ENCRYPTION_AT_REST=true
DATA_ENCRYPTION_IN_TRANSIT=true
AUDIT_LOGGING_ENABLED=true