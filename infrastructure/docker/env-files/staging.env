# Fataplus Staging Environment Configuration
# ===========================================

# Database Configuration
POSTGRES_DB=fataplus_staging
POSTGRES_USER=fataplus_user
POSTGRES_HOST=postgres-service
POSTGRES_PORT=5432
DATABASE_URL=postgresql://fataplus_user:${POSTGRES_PASSWORD}@postgres-service:5432/fataplus_staging

# Redis Configuration
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_URL=redis://redis-service:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_ENVIRONMENT=staging
LOG_LEVEL=INFO
SECRET_KEY=your_staging_secret_key_here

# JWT Configuration
JWT_SECRET_KEY=your_staging_jwt_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=https://staging.fata.plus,http://localhost:3000,http://localhost:8000

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.staging.fata.plus
NEXT_PUBLIC_APP_URL=https://staging.fata.plus

# AI Service Configuration
AI_SERVICE_HOST=0.0.0.0
AI_SERVICE_PORT=8001
AI_MODEL_PATH=/app/models

# MCP Configuration
MCP_PORT=8002
BACKEND_URL=http://web-backend-service:8000
AI_SERVICE_URL=http://ai-services:8001
FRONTEND_URL=http://web-frontend-service:3000

# Regional Settings (Africa)
TIMEZONE=Africa/Nairobi
DEFAULT_CURRENCY=USD
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,fr,sw,ar

# External API Keys (Staging)
OPENAI_API_KEY=your_staging_openai_api_key_here
WEATHER_API_KEY=your_staging_weather_api_key_here
STRIPE_API_KEY=your_staging_stripe_api_key_here

# LDAP Configuration (Staging)
LDAP_SERVER=ldap://staging.ldap.example.com
LDAP_BASE_DN=dc=staging,dc=fata,dc=plus
LDAP_BIND_DN=cn=admin,dc=staging,dc=fata,dc=plus
LDAP_BIND_PASSWORD=your_staging_ldap_password_here

# SSL Certificates (Staging)
SSL_CERT_PATH=/etc/ssl/certs/fataplus-dev.crt
SSL_KEY_PATH=/etc/ssl/private/fataplus-dev.key

# Monitoring and Analytics
SENTRY_DSN=your_staging_sentry_dsn_here
POSTHOG_API_KEY=your_staging_posthog_api_key_here

# Development Features
DEBUG_MODE=true
RELOAD_ENABLED=true
SHOW_ERRORS=true

# Email Configuration (Staging)
SMTP_HOST=smtp.staging.example.com
SMTP_PORT=587
SMTP_USER=staging@fata.plus
SMTP_PASSWORD=your_staging_smtp_password_here
EMAIL_FROM=noreply@staging.fata.plus

# File Storage Configuration
MINIO_HOST=minio.staging.fata.plus
MINIO_PORT=9000
MINIO_ACCESS_KEY=your_staging_minio_access_key_here
MINIO_SECRET_KEY=your_staging_minio_secret_key_here
MINIO_BUCKET_NAME=fataplus-staging

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your_staging_backup_encryption_key_here