# Production Environment Configuration for Fataplus Agritech Platform
# SECURITY: This file contains production configuration templates
# Replace placeholder values with actual production credentials

# Database Configuration
DATABASE_URL=postgresql://prod_user:REPLACE_WITH_SECURE_PASSWORD@postgres:5432/fataplus_prod
POSTGRES_DB=fataplus_prod
POSTGRES_USER=prod_user
POSTGRES_PASSWORD=REPLACE_WITH_SECURE_PASSWORD

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# FastAPI Backend Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_ENVIRONMENT=production
SECRET_KEY=your-production-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Next.js Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.YOUR_DOMAIN.com
NEXT_PUBLIC_APP_URL=https://YOUR_DOMAIN.com
NODE_ENV=production

# AI Services Configuration
AI_SERVICE_HOST=0.0.0.0
AI_SERVICE_PORT=8001
AI_MODEL_PATH=/app/models

# LDAP Configuration
LDAP_SERVER=ldap://YOUR_LDAP_SERVER.com:389
LDAP_BASE_DN=dc=YOUR_DOMAIN,dc=com
LDAP_BIND_DN=cn=admin,dc=YOUR_DOMAIN,dc=com
LDAP_BIND_PASSWORD=REPLACE_WITH_LDAP_PASSWORD

# Security
JWT_SECRET_KEY=GENERATE_WITH_OPENSSL_RAND_HEX_32
CORS_ORIGINS=https://YOUR_DOMAIN.com,https://www.YOUR_DOMAIN.com

# Mobile Money Integration (Production)
MPESA_API_URL=https://api.safaricom.co.ke
MPESA_CONSUMER_KEY=REPLACE_WITH_PRODUCTION_CONSUMER_KEY
MPESA_CONSUMER_SECRET=REPLACE_WITH_PRODUCTION_CONSUMER_SECRET
AIRTEL_MONEY_API_URL=https://openapi.airtel.africa
AIRTEL_MONEY_CLIENT_ID=REPLACE_WITH_PRODUCTION_CLIENT_ID
AIRTEL_MONEY_CLIENT_SECRET=REPLACE_WITH_PRODUCTION_CLIENT_SECRET

# AWS/Cloud Configuration (if using cloud deployment)
AWS_REGION=us-east-1
AWS_S3_BUCKET=YOUR_PRODUCTION_BUCKET_NAME
AWS_ACCESS_KEY_ID=REPLACE_WITH_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_AWS_SECRET_KEY

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=REPLACE_WITH_SENTRY_DSN_URL
ENABLE_METRICS=true

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/YOUR_DOMAIN.crt
SSL_KEY_PATH=/etc/ssl/private/YOUR_DOMAIN.key

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30