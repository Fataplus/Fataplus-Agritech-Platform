# Production Environment Configuration for Fataplus Agritech Platform

# Database Configuration
DATABASE_URL=postgresql://fataplus_user:secure_password@postgres:5432/fataplus_prod
POSTGRES_DB=fataplus_prod
POSTGRES_USER=fataplus_user
POSTGRES_PASSWORD=secure_password

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# FastAPI Backend Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_ENVIRONMENT=production
SECRET_KEY=your-production-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Next.js Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_APP_URL=https://yourdomain.com
NODE_ENV=production

# AI Services Configuration
AI_SERVICE_HOST=0.0.0.0
AI_SERVICE_PORT=8001
AI_MODEL_PATH=/app/models

# LDAP Configuration
LDAP_SERVER=ldap://your-ldap-server.com:389
LDAP_BASE_DN=dc=yourdomain,dc=com
LDAP_BIND_DN=cn=admin,dc=yourdomain,dc=com
LDAP_BIND_PASSWORD=your-ldap-password

# Security
JWT_SECRET_KEY=your-jwt-secret-key-here
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Mobile Money Integration (Production)
MPESA_API_URL=https://api.safaricom.co.ke
MPESA_CONSUMER_KEY=your-production-consumer-key
MPESA_CONSUMER_SECRET=your-production-consumer-secret
AIRTEL_MONEY_API_URL=https://openapi.airtel.africa
AIRTEL_MONEY_CLIENT_ID=your-production-client-id
AIRTEL_MONEY_CLIENT_SECRET=your-production-client-secret

# AWS/Cloud Configuration (if using cloud deployment)
AWS_REGION=us-east-1
AWS_S3_BUCKET=fataplus-production-assets
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-here
ENABLE_METRICS=true

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/fataplus.crt
SSL_KEY_PATH=/etc/ssl/private/fataplus.key

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30