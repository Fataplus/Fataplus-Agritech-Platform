# Fataplus Platform Environment Configuration
# Copy this file to .env.platform and update with your values

# ==========================================
# PLATFORM CONFIGURATION
# ==========================================

# Platform Domain
PLATFORM_DOMAIN=platform.fata.plus
CLOUDRON_APP_ID=fataplus-platform

# Admin Configuration
ADMIN_EMAIL=admin@fata.plus
ADMIN_NAME=Fataplus Administrator
JWT_SECRET=${JWT_SECRET}

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# PostgreSQL Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=fataplus
DB_USER=fataplus
DB_PASSWORD=${DB_PASSWORD}

# Database URLs
DATABASE_URL=postgresql://fataplus:${DB_PASSWORD}@postgres:5432/fataplus
DIRECT_URL=postgresql://fataplus:${DB_PASSWORD}@postgres:5432/fataplus

# ==========================================
# REDIS CONFIGURATION
# ==========================================

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379/0

# ==========================================
# AI SERVICE CONFIGURATION (SmolLM2)
# ==========================================

# SmolLM2 Model Configuration
SMOLLM2_MODEL_NAME=SmolLM2-1.7B-Instruct
SMOLLM2_MODEL_PATH=/models/smollm2-1.7b
SMOLLM2_MAX_TOKENS=2048
SMOLLM2_TEMPERATURE=0.7
SMOLLM2_TOP_P=0.9
SMOLLM2_TOP_K=40
SMOLLM2_GPU_ENABLED=true
SMOLLM2_GPU_MEMORY_GB=8

# AI Service URLs
SMOLLM2_URL=http://smollm2-ai:8002
NEXT_PUBLIC_SMOLLM2_URL=https://platform.fata.plus/ai

# AI Security
AI_API_KEY=${AI_API_KEY}
AI_RATE_LIMIT=100/minute

# ==========================================
# WEB BACKEND CONFIGURATION
# ==========================================

# Application Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# CORS Settings
CORS_ORIGINS=https://platform.fata.plus,https://*.fata.plus
CORS_ALLOW_CREDENTIALS=true

# Session Management
SESSION_SECRET=${SESSION_SECRET}
SESSION_TIMEOUT=3600

# ==========================================
# ADMIN DASHBOARD CONFIGURATION
# ==========================================

# Next.js Configuration
NEXT_PUBLIC_API_URL=https://platform.fata.plus/api
NEXT_PUBLIC_SMOLLM2_URL=https://platform.fata.plus/ai
NEXT_PUBLIC_PLATFORM_DOMAIN=platform.fata.plus

# Admin Dashboard Features
ENABLE_AUDIT_LOG=true
ENABLE_NOTIFICATIONS=true
ENABLE_BACKUP_SYSTEM=true
ENABLE_MULTI_LANGUAGE=true
ENABLE_DARK_MODE=false

# Admin Authentication
ADMIN_JWT_SECRET=${ADMIN_JWT_SECRET}
ADMIN_SESSION_TIMEOUT=7200

# ==========================================
# EXTERNAL SERVICES
# ==========================================

# Email Service (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
SMTP_TLS=true

# File Storage (Optional - for backups)
S3_BUCKET=fataplus-backups
S3_REGION=eu-west-1
S3_ACCESS_KEY=${S3_ACCESS_KEY}
S3_SECRET_KEY=${S3_SECRET_KEY}

# Monitoring (Optional)
SENTRY_DSN=${SENTRY_DSN}
PROMETHEUS_ENABLED=true
GRAFANA_URL=http://grafana:3000

# ==========================================
# SECURITY CONFIGURATION
# ==========================================

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/platform.fata.plus.crt
SSL_KEY_PATH=/etc/ssl/private/platform.fata.plus.key
SSL_AUTO_RENEW=true

# Rate Limiting
API_RATE_LIMIT=1000/minute
ADMIN_RATE_LIMIT=100/minute
AI_RATE_LIMIT=50/minute

# Security Headers
SECURITY_CSP=default-src 'self' https://platform.fata.plus
SECURITY_HSTS=max-age=31536000; includeSubDomains
SECURITY_X_FRAME_OPTIONS=SAMEORIGIN

# ==========================================
# MONITORING AND LOGGING
# ==========================================

# Application Monitoring
HEALTH_CHECK_INTERVAL=30
METRICS_RETENTION_DAYS=30
LOG_RETENTION_DAYS=90

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
ERROR_TRACKING_ENABLED=true
APM_ENABLED=false

# ==========================================
# BACKUP CONFIGURATION
# ==========================================

# Database Backups
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * * # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=gzip

# File Backups
FILE_BACKUP_ENABLED=true
FILE_BACKUP_PATHS=/app/uploads,/app/logs
FILE_BACKUP_SCHEDULE=0 3 * * * # Daily at 3 AM

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================

# Development Mode (set to false in production)
DEVELOPMENT_MODE=false

# Debug Settings
DEBUG_API_REQUESTS=false
DEBUG_DATABASE_QUERIES=false
DEBUG_AI_REQUESTS=false

# Hot Reload (for development)
HOT_RELOAD_ENABLED=false

# ==========================================
# THIRD-PARTY INTEGRATIONS
# ==========================================

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=${GOOGLE_ANALYTICS_ID}
MIXPANEL_TOKEN=${MIXPANEL_TOKEN}

# Error Tracking
ROLLBAR_ACCESS_TOKEN=${ROLLBAR_ACCESS_TOKEN}

# CDN (Optional)
CDN_URL=https://cdn.fata.plus
CDN_ENABLED=false

# ==========================================
# FEATURE FLAGS
# ==========================================

# Experimental Features
ENABLE_AI_CHATBOT=true
ENABLE_VOICE_COMMANDS=false
ENABLE_OFFLINE_MODE=true
ENABLE_PWA_FEATURES=true

# Beta Features
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_CUSTOM_REPORTS=false
ENABLE_API_WEBHOOKS=true

# Deprecated Features (to be removed)
LEGACY_API_SUPPORT=true